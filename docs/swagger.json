{
    "swagger": "2.0",
    "info": {
        "description": "This is api spec for family tree project.",
        "title": "Family tree apis",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "name": "API Support",
            "url": "http://www.swagger.io/support",
